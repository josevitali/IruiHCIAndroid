<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="70dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home_page" tools:context="com.example.usuario.irui.homePage">


    <ImageButton android:id="@+id/buttonHombres"
        android:scaleType="fitXY"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:src="@drawable/novedades"
        android:onClick="pagHombres"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton android:id="@+id/buttonMujeres"
        android:scaleType="fitXY"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:src="@drawable/image"
        android:onClick="pagMujeres"
        android:clickable="true"
        android:layout_below="@+id/buttonHombres"
        android:layout_alignLeft="@+id/buttonHombres"
        android:layout_alignStart="@+id/buttonHombres" />

    <ImageButton android:id="@+id/buttonNinos"
        android:scaleType="fitXY"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:src="@drawable/boys2"
        android:onClick="pagNinos"
        android:clickable="true"
        android:layout_below="@+id/buttonMujeres"
        android:layout_alignLeft="@+id/buttonMujeres"
        android:layout_alignStart="@+id/buttonMujeres" />

    <ImageButton android:id="@+id/buttonNinas"
        android:scaleType="fitXY"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:src="@drawable/girls"
        android:onClick="pagNinas"
        android:clickable="true"
        android:layout_below="@+id/buttonNinos"
        android:layout_alignLeft="@+id/buttonNinos"
        android:layout_alignStart="@+id/buttonNinos" />

    <ImageButton android:id="@+id/buttonBebes"
        android:scaleType="fitXY"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:src="@drawable/bebes"
        android:onClick="pagBebes"
        android:clickable="true"
        android:layout_below="@+id/buttonNinas"
        android:layout_alignLeft="@+id/buttonNinas"
        android:layout_alignStart="@+id/buttonNinas" />


</RelativeLayout>
</ScrollView>