<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">

        <ImageButton android:id="@+id/buttonHombres"
            android:scaleType="fitXY"
            android:layout_width="490dp"
            android:layout_height="250dp"
            android:src="@drawable/novedades"
            android:onClick="pagHombres"
            android:clickable="true" />

        <ImageButton android:id="@+id/buttonMujeres"
            android:scaleType="fitXY"
            android:layout_width="490dp"
            android:layout_height="250dp"
            android:src="@drawable/image"
            android:layout_below="@+id/buttonHombres"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="pagMujeres"
            android:clickable="true" />

        <ImageButton android:id="@+id/buttonNinos"
            android:scaleType="fitXY"
            android:layout_width="490dp"
            android:layout_height="250dp"
            android:src="@drawable/nuevo"
            android:onClick="pagNinos"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true" />






    </LinearLayout>
</ScrollView>