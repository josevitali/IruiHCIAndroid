<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/resultados_busqueda" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.irui.ResultadosBusqueda">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filtros"
            android:id="@+id/buttonFiltros"
            android:onClick="filtros"
            android:layout_alignTop="@+id/buttonOrdenarPor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ordenar_por"
            android:id="@+id/buttonOrdenarPor"
            android:onClick="ordenarPor"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton android:id="@+id/producto1"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/fotoej"
            android:layout_below="@+id/buttonFiltros"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/producto2"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/fotoej"
            android:layout_below="@+id/buttonOrdenarPor"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <!--android:onClick="pagProd" />-->


        <ImageButton android:id="@+id/producto3"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/fotoej"
            android:layout_below="@+id/producto1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="64dp" />

        <ImageButton
            android:id="@+id/producto4"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/fotoej"
            android:layout_alignTop="@+id/producto3"
            android:layout_alignLeft="@+id/producto2"
            android:layout_alignStart="@+id/producto2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vestido"
            android:id="@+id/nameProd1"
            android:layout_below="@+id/producto1"
            android:layout_alignRight="@+id/buttonFiltros"
            android:layout_alignEnd="@+id/buttonFiltros" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vestido"
            android:id="@+id/nameProd2"
            android:layout_alignTop="@+id/nameProd1"
            android:layout_alignLeft="@+id/buttonOrdenarPor"
            android:layout_alignStart="@+id/buttonOrdenarPor"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
